<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DrawTest">

    <cs.easel.DrawPanel
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/surfaceView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:paddingTop="16dp"
        android:layout_below="@+id/redButton"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/redButton"
        android:background="@color/red"
        android:onClick="redButtonOnClick"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/blackButton"
        android:layout_marginStart="45dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/greenButton"
        android:background="@color/green"
        android:onClick="greenButtonOnClick"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/blueButton"
        android:layout_marginEnd="51dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blueButton"
        android:background="@color/blue"
        android:onClick="blueButtonOnClick"
        android:layout_above="@+id/surfaceView"
        android:layout_alignEnd="@+id/surfaceView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blackButton"
        android:background="@color/black"
        android:onClick="blackButtonOnClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erase"
        android:id="@+id/eraseButton"
        android:onClick="eraseButtonOnClick"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
